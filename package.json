    "dotenv": "^16.4.7",
    "eslint": "^9.23.0",
    "eslint-config-next": "15.5.2",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.51.1",
    "prettier": "3.6.2",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vite-plugin-env-compatible": "^2.0.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vitest-browser-react": "^0.1.1"
